{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "npm run build && pm2 start ecosystem.config.js --env production",
    "reload": "npm run build && pm2 reload ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js && pm2 delete ecosystem.config.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "@solana/web3.js": "^1.98.4",
    "@supabase/supabase-js": "^2.55.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.1",
    "hono": "^4.9.1",
    "jsonwebtoken": "^9.0.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
